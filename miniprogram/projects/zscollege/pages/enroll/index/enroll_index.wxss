@import "../../../style/skin.wxss";

.main-enroll-list {
	width: 100%;
	padding: 20rpx;
	display: flex;
	flex-direction: column;
}

.main-enroll-list .item {
	width: 100%;
	display: flex;
	flex-direction: column;
	background-color: #fff;
	border-radius: 10rpx;
	margin-bottom: 30rpx;
	position: relative;
	overflow: hidden;
}

.main-enroll-list .item .status {
	position: absolute;
	right: 0;
	bottom: 0;
	padding: 5rpx 10rpx;
	z-index: 99;
	background-color: var(--yellow) !important;
	color: #fff;
	font-size: 26rpx;
	border-top-left-radius: 10rpx;
	border-bottom-right-radius: 10rpx; 
}


.main-enroll-list .item .line1 {
	width: 100%;
	font-size: 32rpx;
	padding: 20rpx 20rpx 30rpx;
	color: #000;
	border-bottom: 1rpx solid #eee;
}

.main-enroll-list .item .line2 {
	width: 100%;
	display: flex;
	padding: 20rpx;
	border-bottom: 1rpx solid #eee;
}

.main-enroll-list .item .line2 image {
	width: 250rpx;
	height: 160rpx;
	border-radius: 10rpx;
	margin-right: 20rpx;
	border:1rpx solid #eee;
}

.main-enroll-list .item .line2 .right {
	flex: 1;
	display: flex;
	flex-direction: column;
}

.main-enroll-list .item .line2 .right .right-line1 {
	width: 100%;
	height: 110rpx;
	color: #000;
	font-size: 26rpx;
}

.main-enroll-list .item .line2 .right .right-line2 {
	width: 100%;
	font-size: 26rpx;
	margin-top: 10rpx;
}

.main-enroll-list .item .line3 {
	width: 100%;
	display: flex;
	padding: 20rpx;
}

.main-enroll-list .item .line3 .line-item {
	flex: 1 1 0;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	position: relative;
}

.main-enroll-list .item .line3 .line-item .txt1 {
	color: #777;
	font-size: 24rpx;
}

.main-enroll-list .item .line3 .line-item .txt2 {
	color: #333;
	font-size: 26rpx;
	margin-top: 10rpx;
}

.main-enroll-list .item .line3 .line-item:nth-child(1)::after,
.main-enroll-list .item .line3 .line-item:nth-child(2)::after {
	content: " ";
	position: absolute;
	top: 50%;
	right: 0rpx;
	height: 80%;
	width: 1rpx;
	border-radius: 2rpx;
	background-color: #ccc;
	transform: translateY(-50%)
}